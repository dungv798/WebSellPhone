@model IEnumerable<WebForSell.Models.Category>
<div class="product-categories">
    <h5 class="block-sidebar__title border-bottom border-2">
        Categories
    </h5>
    <div class="block-sidebar__content position-relative">
        <div class="product-categories__list pt-2">
           
            <ul class="sidebarListCategories m-0 list-unstyled">
                 @foreach (var item in Model) {
                <li class="sidebarBlogCateItem">
                    <a href="/collections/laptop-computer">
                        <svg class="icon circle me-2" width=18 height=18 xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M256 8C119 8 8 119 8 256s111 248 248 248 248-111 248-248S393 8 256 8zm216 248c0 118.7-96.1 216-216 216-118.7 0-216-96.1-216-216 0-118.7 96.1-216 216-216 118.7 0 216 96.1 216 216z" /></svg>
                        <svg class="icon check-circle me-2" width=18 height=18 xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M256 8C119.033 8 8 119.033 8 256s111.033 248 248 248 248-111.033 248-248S392.967 8 256 8zm0 464c-118.664 0-216-96.055-216-216 0-118.663 96.055-216 216-216 118.664 0 216 96.055 216 216 0 118.663-96.055 216-216 216zm141.63-274.961L217.15 376.071c-4.705 4.667-12.303 4.637-16.97-.068l-85.878-86.572c-4.667-4.705-4.637-12.303.068-16.97l8.52-8.451c4.705-4.667 12.303-4.637 16.97.068l68.976 69.533 163.441-162.13c4.705-4.667 12.303-4.637 16.97.068l8.451 8.52c4.668 4.705 4.637 12.303-.068 16.97z" /></svg>@item.CategoryName
                           
                            @if(item.Products != null)
                            {
                                <span class="number-item">(@item.Products.ToList().Count)</span>
                            }
                            else
                            {
                                <span class="number-item">(0)</span>
                            }

                        
                    </a>
                </li>

              
                }
            </ul>
        </div>
    </div>
</div>