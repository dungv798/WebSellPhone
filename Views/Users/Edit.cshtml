@model WebForSell.Models.User

@{
    ViewData["Title"] = "Chỉnh sửa quyền truy cập";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="breadcrumb-item">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active">Chỉnh sửa quyền truy cập</span>
        </nav>
    </div>
</div>

<form asp-action="Edit" asp-route-id="@Model.UserId" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">Tên QTC</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="UserName" placeholder="Tên quyền">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="UserEmail" placeholder="Tên quyền">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">Mật khẩu</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="UserPassword" placeholder="Tên quyền">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">Mô tả</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="UserRole" placeholder="Tên quyền">
            </div>
        </div>


        <div class="form-group col-md-6">
            <div class="col-sm-6">
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            </div>
        </div>
    </div>
</form>