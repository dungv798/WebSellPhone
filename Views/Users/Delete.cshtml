@model WebForSell.Models.User

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="breadcrumb-item">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active">Xác nhận xóa quyền truy cập</span>
        </nav>
    </div>
</div>

<div class="card-body">
    <h4 class="card-title">Xác nhận xóa quyền truy cập</h4>
    <div class="table-responsive">
        <table class="product-info-table m-t-20">
            <tbody>

                <tr>
                    <td>Tên quyền truy cập:</td>
                    <td>@Model.UserName</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>@Model.UserEmail</td>
                </tr>
                <tr>
                    <td>MK:</td>
                    <td>@Model.UserPassword</td>
                </tr>
                <tr>
                    <td>Mô tả:</td>
                    <td>@Model.UserRole</td>
                </tr>
                <tr>
                    <td>Xác nhận xóa:</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@Model.UserId">
                            <input type="hidden" asp-for="UserId" />
                            <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
