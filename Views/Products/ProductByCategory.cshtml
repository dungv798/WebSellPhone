@model IEnumerable<WebForSell.Models.Product>
@{
    ViewData["Title"] = "ProductByCategory";
    Layout = "~/Views/Shared/_ProductList.cshtml";
}


<div class="list-border row g-3 g-md-4 row-cols-2 row-cols-md-3 row-cols-lg-6">

    @foreach (var item in Model)
    {
        <div class="col mb-3 mb-md-4">
            <div class="product-card product-grid">

                <div class="product-grid__inner">



                    <div class="product-card__image-wrapper">

                        <a class="product-card__image-link" href="~/Products/ProductDetails?id=@item.ProductId">
                            <span class="img-primary">

                                <div class="card_wrap">

                                    <div class="card__image position-relative lazyload js" style="padding-top:100.0%;" role="img"
                                         aria-label="Home Security Camera System"
                                         data-alt="@item.ProductName"
                                         data-bgset="@item.ProductImage"
                                         data-sizes="auto">
                                        <div class="pre-loading position-absolute">
                                            <span class="pre-loading__bar"></span>
                                            <div class="vela-loading__icon"><span></span><span></span><span></span><span></span></div>
                                        </div>
                                    </div>

                                </div>
                            </span>

                            <span class="img-secondary position-absolute">

                                <div class="card_wrap">
                                    <div class="card__image position-relative lazyload js" style="padding-top:100.0%;" role="img"
                                         aria-label="Home Security Camera System"
                                         data-alt="@item.ProductName"
                                         data-bgset="@item.ProductImage"
                                         data-sizes="auto">
                                        <div class="pre-loading position-absolute">
                                            <span class="pre-loading__bar"></span>
                                            <div class="vela-loading__icon"><span></span><span></span><span></span><span></span></div>
                                        </div>
                                    </div>
                                </div>
                            </span>
                        </a>

                        <div class="product-card__content">
                            <div class="product-card__content--inner  text-center mt-3">

                                <h6 class="product-card__name mb-1">
                                    <a class="effect-line line-title" href="/products/home-security-camera-system-5">@item.ProductName</a>
                                </h6>
                                <div class="product-card__review product-review mb-1">
                                    <span class="shopify-product-reviews-badge" data-id="1227616321588"></span>
                                </div>
                                <div class="product-group-price d-flex align-items-center justify-content-center">
                                    <div class="product-price">@item.ProductPrice</div>
                                </div>

                                <div class="product-card__buttons position-absolute bottom-0 start-0 w-100">
                                    <div class="product-card__form">
                                        <a asp-controller="Cart" asp-action="Add" asp-route-id="@item.ProductId" class="form-addtocart" data-product-form>
                                            <input type="hidden" name="id" value="9505168359476" /><button class="js-btn-addtocart btn btn--add-to-cart w-100" asp-controller="Cart" asp-action="Add" asp-route-id="@item.ProductId" type="submit" value="Submit" title="Add to Cart">
                                                <svg class="icon-cart d-none" width="18" height="18" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M9.75 4.25H5.75V0.25C5.75 0.111875 5.63812 0 5.5 0H4.5C4.36188 0 4.25 0.111875 4.25 0.25V4.25H0.25C0.111875 4.25 0 4.36188 0 4.5V5.5C0 5.63812 0.111875 5.75 0.25 5.75H4.25V9.75C4.25 9.88813 4.36188 10 4.5 10H5.5C5.63812 10 5.75 9.88813 5.75 9.75V5.75H9.75C9.88813 5.75 10 5.63812 10 5.5V4.5C10 4.36188 9.88813 4.25 9.75 4.25Z" fill="currentColor" /></svg>
                                                <span class="text">Add to Cart</span>
                                            </button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>




                    </div>

                </div>

            </div>

        </div>
    }



</div>

